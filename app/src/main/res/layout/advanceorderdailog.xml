<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/advance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional Order"
            android:textSize="@dimen/twenty"
            android:layout_margin="@dimen/ten"
            android:fontFamily="@font/inter_bold"
            android:textColor="@color/black">

        </TextView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/color1"
            android:padding="@dimen/five"
            android:id="@+id/lin_AdvanceOrder">

            <TextView
                android:id="@+id/text_productName"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Product Name : "
                android:textColor="@color/color6"
                android:textSize="@dimen/textsize"
                android:fontFamily="@font/inter_regular">

            </TextView>

            <TextView
                android:id="@+id/text_Qty"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Qty"
                android:textColor="@color/color6"
                android:textSize="@dimen/textsize"
                android:fontFamily="@font/inter_regular">

            </TextView>

            <TextView
                android:id="@+id/text_Price"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="Price"
                android:textColor="@color/color6"
                android:textSize="@dimen/textsize"
                android:fontFamily="@font/inter_regular">

            </TextView>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/recyclerviewAdvanceOrder"
            android:visibility="visible">

        </androidx.recyclerview.widget.RecyclerView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cornerRadius="@dimen/ten"
                android:backgroundTint="#E33629"
                android:layout_gravity="left"
                android:padding="@dimen/ten"
                android:layout_marginTop="@dimen/ten"
                android:layout_marginLeft="@dimen/thirty"
                android:layout_marginRight="@dimen/thirty"
                android:layout_marginBottom="@dimen/twenty"
                android:text="Cancel"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/white" />

    </LinearLayout>

</RelativeLayout>