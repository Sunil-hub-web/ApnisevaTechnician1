<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

       <!-- <include layout="@layout/toolbar"></include>-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/fifteen"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.8"
                        android:fontFamily="@font/inter_bold"
                        android:text="Booking Id : "
                        android:textColor="@color/color1"
                        android:textSize="@dimen/edittextsize">

                    </TextView>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/inter_bold"
                        android:text="# 586"
                        android:textColor="@color/color1"
                        android:textSize="@dimen/edittextsize">

                    </TextView>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eighty"
                    android:layout_margin="@dimen/ten"
                    app:cardCornerRadius="@dimen/fifteen"
                    app:cardElevation="@dimen/five">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/statuec_back">

                        <TextView
                            android:id="@+id/bookingId"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/edittextsize"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_bold"
                            android:text="Order Confirmation"
                            android:textColor="@color/color3"
                            android:textSize="@dimen/textsize"></TextView>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/forty"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/five"
                            android:layout_marginRight="@dimen/ten"
                            android:layout_toRightOf="@id/statues"
                            android:layout_weight="1"
                            android:background="@drawable/statues_shape"
                            app:backgroundTint="@color/color5">

                            <TextView
                                android:id="@+id/paid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="@dimen/five"
                                android:layout_marginTop="@dimen/five"
                                android:layout_marginEnd="@dimen/five"
                                android:layout_marginBottom="@dimen/five"
                                android:fontFamily="@font/inter_bold"
                                android:text="Confirmed"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize">

                            </TextView>
                        </RelativeLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView1"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eighty"
                    android:layout_margin="@dimen/ten"
                    app:cardCornerRadius="@dimen/fifteen"
                    app:cardElevation="@dimen/five">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/statuec_back">

                        <TextView
                            android:id="@+id/name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/edittextsize"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_bold"
                            android:text="Technician Allocated"
                            android:textColor="@color/color3"
                            android:textSize="@dimen/textsize"></TextView>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="@dimen/forty"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/ten"
                            android:layout_toRightOf="@id/statues"
                            android:layout_weight="1"
                            android:background="@drawable/statues_shape">

                            <TextView
                                android:id="@+id/text_TechicianName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="@dimen/five"
                                android:layout_marginLeft="@dimen/five"
                                android:layout_marginTop="@dimen/five"
                                android:layout_marginEnd="@dimen/five"
                                android:layout_marginRight="@dimen/five"
                                android:layout_marginBottom="@dimen/five"
                                android:fontFamily="@font/inter_bold"
                                android:text="Techician Name"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize"
                                android:textStyle="bold">

                            </TextView>
                        </RelativeLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_AllocatedTechician"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eighty"
                    android:layout_margin="@dimen/ten"
                    app:cardCornerRadius="@dimen/fifteen"
                    app:cardElevation="@dimen/five">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/statuec_back">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/twenty"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_bold"
                            android:text="Allocated Technician"
                            android:textColor="@color/color3"
                            android:textSize="@dimen/textsize"></TextView>

                        <RelativeLayout
                            android:id="@+id/rel_Pinverified"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/ten"
                            android:layout_toRightOf="@id/statues"
                            android:layout_weight="1"
                            android:background="@drawable/statues_shape">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_margin="@dimen/five"
                                android:layout_marginStart="@dimen/five"
                                android:layout_marginTop="@dimen/five"
                                android:layout_marginEnd="@dimen/five"
                                android:layout_marginBottom="@dimen/five"
                                android:fontFamily="@font/inter_bold"
                                android:gravity="center"
                                android:text="Pin verified &amp; Work in progress"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize">

                            </TextView>
                        </RelativeLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/pinVerifay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/ten"
                    android:visibility="visible"
                    app:cardCornerRadius="@dimen/fifteen"
                    app:cardElevation="@dimen/one">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/statuec_back"
                        android:orientation="vertical">

                        <!--   <TextView
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content"
                               android:layout_gravity="center"
                               android:layout_marginLeft="@dimen/ten"
                               android:layout_marginTop="@dimen/ten"
                               android:layout_weight="1"
                               android:fontFamily="@font/inter_semibold"
                               android:text="3  Allocated Technician / Pin Verification"
                               android:textColor="@color/color3"
                               android:textSize="@dimen/textsize"></TextView>

                           <View
                               android:id="@+id/view"
                               android:layout_width="@dimen/three_hundred"
                               android:layout_height="1dp"
                               android:layout_below="@+id/text1"
                               android:layout_marginLeft="15dp"
                               android:layout_marginTop="@dimen/thirteen"
                               android:background="@color/color4" />-->

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/ten"
                            android:layout_marginTop="@dimen/ten"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_semibold"
                            android:text="Technician Allocated"
                            android:textColor="@color/color3"
                            android:textSize="@dimen/edittextsize"></TextView>

                        <androidx.cardview.widget.CardView
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/hundred_fifty"
                            android:layout_margin="@dimen/ten"
                            app:cardCornerRadius="@dimen/ten"
                            app:cardElevation="@dimen/three"
                            >

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/statues_edit">

                                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                                    android:id="@+id/profile_image"
                                    android:layout_width="@dimen/eighty"
                                    android:layout_height="@dimen/eighty"
                                    android:layout_centerVertical="true"
                                    android:layout_marginLeft="@dimen/ten"
                                    android:src="@drawable/no_avatar"
                                    app:civ_border_color="#FF000000"
                                    app:civ_border_width="2dp" />


                                <RelativeLayout
                                    android:id="@+id/details"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/twenty"
                                    android:layout_toRightOf="@+id/profile_image"
                                    android:orientation="vertical">

                                    <TextView
                                        android:id="@+id/text_name"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/ten"
                                        android:layout_weight="1"
                                        android:fontFamily="@font/inter_semibold"
                                        android:text="Navin"
                                        android:textColor="@color/color1"
                                        android:textSize="@dimen/edittextsize"></TextView>

                                    <TextView
                                        android:id="@+id/text_Contact"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/text_name"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/ten"
                                        android:fontFamily="@font/inter_semibold"
                                        android:text="contact :"
                                        android:textColor="@color/color1"
                                        android:textSize="@dimen/edittextsize"></TextView>

                                    <TextView
                                        android:id="@+id/text_contact"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_below="@+id/text_name"
                                        android:layout_gravity="center"
                                        android:layout_marginLeft="@dimen/ten"
                                        android:layout_toRightOf="@+id/text_Contact"
                                        android:fontFamily="@font/inter_regular"
                                        android:hint="7894561230"
                                        android:textColor="@color/color5"
                                        android:textSize="@dimen/edittextsize"></TextView>


                                </RelativeLayout>

                                <RatingBar
                                    android:id="@+id/simpleRatingBar"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/details"
                                    android:layout_toRightOf="@id/profile_image"
                                    android:numStars="5"
                                    android:rating="5"
                                    android:scaleX="0.5"
                                    android:scaleY="0.5"
                                    android:theme="@style/RatingBar" />


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="2"
                            android:layout_marginBottom="@dimen/fifteen">

                            <EditText
                                android:id="@+id/edit_VerifythePin"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/fifty"
                                android:layout_marginLeft="@dimen/eighteen"
                                android:layout_weight="1.2"
                                android:background="@drawable/statues_edit"
                                android:hint="Enter / Verify the Pin"
                                android:imeOptions="actionDone"
                                android:inputType="number"
                                android:paddingLeft="@dimen/fifteen"
                                android:textColor="#25297A"
                                android:textSize="@dimen/textsize"
                                android:fontFamily="@font/inter_regular"/>

                            <Button
                                android:id="@+id/btn_PinVerifyApply"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/forty"
                                android:layout_weight="0.6"
                                android:layout_below="@+id/data"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/twenty"
                                android:background="@drawable/statues_backbutt"
                                android:text="Apply"
                                app:backgroundTint="@color/color1"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize"
                                android:fontFamily="@font/inter_bold"></Button>

                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_WorkInfo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eighty"
                    android:layout_margin="@dimen/ten"
                    app:cardElevation="@dimen/five"
                    app:cardCornerRadius="@dimen/fifteen">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/statuec_back">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/twenty"
                            android:layout_weight="1"
                            android:text="Work Info / Bill Info"
                            android:textColor="@color/color3"
                            android:textSize="@dimen/textsize"
                            android:fontFamily="@font/inter_bold"></TextView>

                        <RelativeLayout
                            android:id="@+id/rel_WorkCompleted"
                            android:layout_width="0dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/ten"
                            android:layout_toRightOf="@id/statues"
                            android:layout_weight="1"
                            android:background="@drawable/statues_shape">

                            <TextView
                                android:id="@+id/ShowPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:layout_marginStart="@dimen/five"
                                android:layout_marginTop="@dimen/five"
                                android:layout_marginEnd="@dimen/five"
                                android:layout_marginBottom="@dimen/five"
                                android:fontFamily="@font/inter_bold"
                                android:text="Work Completed "
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize"
                                android:textStyle="bold">

                            </TextView>

                            <!--<TextView
                                       android:id="@+id/ShowPrice"
                                       android:layout_width="wrap_content"
                                       android:layout_height="wrap_content"
                                       android:gravity="center"
                                       android:layout_marginLeft="@dimen/five"
                                       android:layout_marginBottom="@dimen/five"
                                       android:layout_toRightOf="@id/text1"
                                       android:text="&amp; Rs 1500 is due"
                                       android:textColor="@color/white"
                                       android:textStyle="bold"
                                       android:textSize="@dimen/textsize">

                                   </TextView>-->

                        </RelativeLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/finalWorkDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/ten"
                    android:visibility="visible"
                    app:cardElevation="@dimen/one"
                    app:cardCornerRadius="@dimen/fifteen">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/statuec_back">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/ten"
                            android:layout_marginTop="@dimen/ten"
                            android:layout_weight="1"
                            android:fontFamily="@font/inter_bold"
                            android:text="Final Work Details"
                            android:textColor="@color/color3"
                            android:textSize="@dimen/edittextsize"></TextView>

                        <EditText
                            android:id="@+id/edit_CompleteAddress"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/hundred"
                            android:layout_margin="@dimen/fifteen"
                            android:background="@drawable/statues_edit"
                            android:gravity="start"
                            android:paddingLeft="20dp"
                            android:paddingTop="@dimen/ten"
                            android:textColor="#25297A"
                            android:textSize="18dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/ten"
                            android:weightSum="3">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/ten"
                                android:layout_weight="1.2"
                                android:text="Final Bill amount"
                                android:textColor="@color/color3"
                                android:textSize="@dimen/textsize"
                                android:fontFamily="@font/inter_semibold"></TextView>

                            <EditText
                                android:id="@+id/filal_Money"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/forty"
                                android:layout_weight="1"
                                android:background="@drawable/statues_edit"
                                android:paddingLeft="@dimen/ten"
                                android:textColor="@color/color3"
                                android:textSize="@dimen/edittextsize"
                                android:fontFamily="@font/inter_semibold"/>

                            <Button
                                android:id="@+id/btn_CashPaidAopply"
                                android:layout_width="0dp"
                                android:layout_height="@dimen/forty"
                                android:layout_below="@+id/data"
                                android:layout_centerHorizontal="true"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginLeft="@dimen/ten"
                                android:layout_weight="0.7"
                                android:background="@drawable/statues_backbutt"
                                android:text="Apply"
                                app:backgroundTint="@color/color1"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="@dimen/textsize"
                                android:fontFamily="@font/inter_bold"></Button>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/fifteen"
                            android:weightSum="3"
                            android:layout_marginBottom="@dimen/fifteen">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/ten"
                                android:layout_weight="1.5"
                                android:text="Booking Amount Due"
                                android:textColor="@color/color3"
                                android:textSize="@dimen/textsize"
                                android:fontFamily="@font/inter_semibold"></TextView>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/ten"
                                android:layout_weight="0.2"
                                android:text="Rs"
                                android:textColor="@color/color3"
                                android:textSize="@dimen/edittextsize"></TextView>

                            <TextView
                                android:id="@+id/booking_price"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/ten"
                                android:layout_weight="0.8"
                                android:text="150"
                                android:textColor="#000000"
                                android:textSize="@dimen/edittextsize"
                                android:fontFamily="@font/inter_semibold"></TextView>

                        </LinearLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_Payment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/eighty"
                    android:layout_margin="@dimen/ten"
                    app:cardElevation="@dimen/five"
                    app:cardCornerRadius="@dimen/fifteen">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/statuec_back">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/twenty"
                            android:layout_weight="0.7"
                            android:text="5  Payment"
                            android:textColor="#1436F3"
                            android:textSize="@dimen/textsize"></TextView>

                        <RelativeLayout
                            android:id="@+id/rel_PaymentTobe"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginRight="@dimen/ten"
                            android:layout_toRightOf="@id/statues"
                            android:layout_weight="1.5"
                            android:background="@drawable/statues_shape">

                            <TextView
                                android:id="@+id/text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/five"
                                android:gravity="center"
                                android:text="Payment To be done Rs"
                                android:textColor="@color/color6"
                                android:textSize="@dimen/textsize"
                                android:textStyle="bold">

                            </TextView>

                            <TextView
                                android:id="@+id/priceAmount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/text"
                                android:layout_centerHorizontal="true"
                                android:layout_marginStart="@dimen/three"
                                android:layout_marginTop="@dimen/three"
                                android:layout_marginEnd="@dimen/three"
                                android:layout_marginBottom="@dimen/three"
                                android:text="1500"
                                android:textColor="@color/color6"
                                android:textSize="@dimen/textsize"
                                android:textStyle="bold">

                            </TextView>
                        </RelativeLayout>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/lin_payment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/fifteen"
                    android:layout_marginBottom="@dimen/fifteen"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <RadioButton
                        android:id="@+id/radio_RecievedCash"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Recieved Cash"
                        android:textSize="@dimen/twenty_size"
                        android:textColor="@color/color3"></RadioButton>

                    <Button
                        android:id="@+id/btn_CashApply"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/forty"
                        android:layout_below="@+id/data"
                        android:layout_marginLeft="@dimen/twenty"
                        android:layout_weight="2"
                        android:background="@drawable/statues_backbutt"
                        android:text="Apply"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textsize"
                        app:backgroundTint="@color/color1"></Button>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>





</RelativeLayout>