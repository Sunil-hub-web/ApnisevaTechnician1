<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#EDF5F5F6">

    <LinearLayout
        android:id="@+id/total"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edit_VerifayOTP"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.4"
                android:background="@drawable/edit_background1"
                android:ems="10"
                android:fontFamily="@font/inter_regular"
                android:hint="OTP"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="10"
                android:padding="@dimen/eight"
                android:textColor="@color/color5"
                android:textSize="@dimen/edittextsize"
                android:textStyle="normal"></EditText>

            <Button
                android:id="@+id/btn_Verifay"
                android:layout_width="0dp"
                android:layout_height="@dimen/forty"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/five"
                android:layout_marginRight="@dimen/five"
                android:background="@drawable/button_background"
                android:backgroundTint="@color/color1"
                android:fontFamily="@font/inter_light"
                android:text="Verifay OTP"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize">


            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:id="@+id/lin_Services">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add Aditional Services"
                android:textSize="@dimen/twenty"
                android:layout_margin="@dimen/fifteen"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/black">

            </TextView>

            <EditText
                android:id="@+id/edit_Services"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_background"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:layout_marginTop="@dimen/fifteen"
                android:padding="@dimen/fifteen"
                android:fontFamily="@font/inter_regular"
                android:ems="10"
                android:hint="EnterServices"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLength="10"
                android:textColor="@color/color5"
                android:textSize="@dimen/twenty_size"
                android:textStyle="normal">


            </EditText>

            <EditText
                android:id="@+id/edit_Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_background"
                android:layout_marginLeft="@dimen/twenty"
                android:layout_marginRight="@dimen/twenty"
                android:padding="@dimen/fifteen"
                android:layout_marginTop="@dimen/ten"
                android:fontFamily="@font/inter_regular"
                android:ems="10"
                android:hint="Enter Price"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="10"
                android:textColor="@color/color5"
                android:textSize="@dimen/twenty_size"
                android:textStyle="normal">


            </EditText>

            <Button
                android:id="@+id/btn_AddServices"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:backgroundTint="@color/color1"
                android:layout_gravity="left"
                android:layout_margin="@dimen/fifteen"
                android:text="Add Additional Services"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/white">


            </Button>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/twenty">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_submit2"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cornerRadius="@dimen/ten"
                    android:backgroundTint="#0A9F10"
                    android:layout_gravity="left"
                    android:layout_marginLeft="@dimen/ten"
                    android:text="Ordes Success"
                    android:padding="@dimen/ten"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/white" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_submit1"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    app:cornerRadius="@dimen/ten"
                    android:backgroundTint="#E33629"
                    android:layout_gravity="left"
                    android:padding="@dimen/ten"
                    android:layout_marginLeft="@dimen/ten"
                    android:layout_marginRight="@dimen/ten"
                    android:text="Order Cancle"
                    android:fontFamily="@font/inter_bold"
                    android:textColor="@color/white" />


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>